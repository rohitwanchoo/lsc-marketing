# ============================================================
# LSC Organic Revenue Platform — Environment Configuration
# Copy to .env and fill in your values
# ============================================================

# ─── Runtime ───────────────────────────────────────────────
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# ─── Database ──────────────────────────────────────────────
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lsc_marketing
DB_USER=lsc_user
DB_PASSWORD=your_strong_password_here

# ─── Redis ─────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ─── AI / Claude ───────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-6

# ─── Business Config ───────────────────────────────────────
COMPANY_NAME=LSC
DOMAIN=yourdomain.com
ICP=B2B SaaS founders and marketing leaders at 10-200 person companies
VALUE_PROP=Autonomous organic revenue growth — compounding leads without paid ads
TARGET_MRR_USD=50000
AVG_DEAL_SIZE_USD=2000

# ─── Dashboard ─────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3001

# ─── SEO Integrations ──────────────────────────────────────
GSC_CREDENTIALS_PATH=/app/config/gsc-credentials.json
AHREFS_API_KEY=
SEMRUSH_API_KEY=

# ─── CRM ───────────────────────────────────────────────────
HUBSPOT_API_KEY=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# ─── Email ─────────────────────────────────────────────────
SENDGRID_API_KEY=
FROM_EMAIL=growth@yourdomain.com
FROM_NAME=LSC Growth Team

# ─── Social — LinkedIn ─────────────────────────────────────
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_ORGANIZATION_ID=

# ─── Social — Twitter/X ────────────────────────────────────
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ─── Analytics ─────────────────────────────────────────────
GA4_PROPERTY_ID=
GA4_CREDENTIALS_PATH=/app/config/ga4-credentials.json

# ─── Slack ─────────────────────────────────────────────────
# Option A: Bot Token (preferred — supports posting to any channel)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# Option B: Incoming Webhook (simpler, single channel only)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL_ALERTS=#sales-alerts
SLACK_CHANNEL_DIGEST=#marketing

# ─── SMS / Twilio ───────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1xxxxxxxxxx
SALES_PHONE_NUMBER=+1xxxxxxxxxx

# ─── CMS ───────────────────────────────────────────────────
# Type: wordpress | ghost | webflow | mock (default)
CMS_TYPE=mock
CMS_URL=https://yourdomain.com
# WordPress Application Password auth
CMS_USERNAME=admin
CMS_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
# Ghost Admin API
GHOST_ADMIN_KEY=keyid:secret
# Webflow Data API
WEBFLOW_API_TOKEN=
WEBFLOW_COLLECTION_ID=

# ─── Guardrails ────────────────────────────────────────────
MAX_WEEKLY_AI_COST_USD=100
MAX_CONTENT_PER_DAY=10
BRAND_TONE_KEYWORDS=professional,data-driven,direct,no-fluff
BLOCKED_TOPICS=competitors,unverified-claims
MIN_CONFIDENCE_TO_SCALE=0.90
